{
  "name": "whatsapp-bot-bun",
  "version": "1.0.0",
  "description": "High-performance WhatsApp bot with BunJS and ElysiaJS",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "db:migrate": "bun run src/database/migrate.ts",
    "docker:build": "docker build -t whatsapp-bot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env whatsapp-bot"
  },
  "dependencies": {
    "elysia": "^1.1.24",
    "whatsapp-web.js": "^1.26.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "better-sqlite3": "^11.5.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "qrcode-terminal": "^0.12.0",
    "rate-limiter-flexible": "^5.0.3",
    "jose": "^5.9.6",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode-terminal": "^0.12.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "bun",
    "elysia",
    "typescript",
    "sqlite",
    "webhook"
  ],
  "author": "Your Name",
  "license": "MIT"
}
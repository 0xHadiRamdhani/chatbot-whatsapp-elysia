# WhatsApp Bot Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# WhatsApp Web Configuration
SESSION_NAME=whatsapp-bot-session
QR_REFRESH_INTERVAL=30000
RECONNECT_INTERVAL=5000
MAX_RECONNECT_ATTEMPTS=10

# Database Configuration
DATABASE_PATH=./data/whatsapp-bot.db
DATABASE_BACKUP_INTERVAL=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/whatsapp-bot.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Webhook Configuration
WEBHOOK_SECRET=dev-webhook-secret-key-12345
WEBHOOK_TIMEOUT=30000

# Security Configuration
JWT_SECRET=dev-jwt-secret-key-67890
API_KEY=dev-api-key-abcdef

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Plugin Configuration
PLUGIN_DIR=./plugins
AUTO_LOAD_PLUGINS=true